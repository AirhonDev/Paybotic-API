{
  "name": "paybotic-api",
  "version": "0.0.0",
  "description": "APIs that will house the Paybotic MCA offering",
  "engines": {
    "node": ">= 14.7 <15"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/jest": "~26.0.20",
    "@types/knex": "^0.16.1",
    "@types/node": "~14.14.31",
    "@typescript-eslint/eslint-plugin": "~4.16.1",
    "@typescript-eslint/parser": "~4.16.1",
    "eslint": "~7.21.0",
    "eslint-config-prettier": "~8.1.0",
    "eslint-plugin-jest": "~24.1.5",
    "faker": "^5.5.2",
    "jest": "~26.6.3",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.7.1",
    "prettier": "~2.2.1",
    "rimraf": "~3.0.2",
    "ts-jest": "~26.5.2",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tsutils": "~3.20.0",
    "typescript": "~4.2.2"
  },
  "scripts": {
    "start": "node -r ./tsconfig-paths-bootstrap.js build/src/index.js",
    "dev": "nodemon -r tsconfig-paths/register src/index.ts | pino-pretty",
    "dev:old": "nodemon src/index.ts",
    "clean": "rimraf coverage build tmp",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prettify": "prettier --config .prettierrc '*/**/*.ts' --write",
    "migrate:make": "knex migrate:make --knexfile=./src/database/knex.js -x js $NAME",
    "api-knex": "TS_NODE_COMPILER_OPTIONS='{ \"module\": \"commonjs\" }' knex --knexfile=./src/database/knex.js",
    "db:migrate:latest": "knex migrate:latest --knexfile=./src/database/knex.js",
    "db:migrate:rollback": "knex migrate:rollback --knexfile=./src/database/knex.js",
    "db:reset": "npm run db:migrate:rollback && npm run db:migrate:latest",
    "db:migrate:up": "knex migrate:up ${NAME} --knexfile=./src/database/knex.js",
    "db:migrate:down": "knex migrate:down ${NAME} --knexfile=./src/database/knex.js",
    "seed:make": "knex seed:make --knexfile=./src/database/knex.js $NAME -x js",
    "seed:run": "knex seed:run --knexfile=./src/database/knex.js",
    "seed:run:specific": "knex seed:run --specific=${NAME} --knexfile=./server/common/knex-migrate.js"
  },
  "author": "Brent Tudas <brent.tudas@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "awilix": "^4.3.3",
    "body-parser": "^1.19.0",
    "camelcase-keys": "^6.2.2",
    "cors": "^2.8.5",
    "decamelize-keys": "^1.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^3.16.6",
    "helmet": "^4.4.1",
    "js-yaml": "^3.14.0",
    "json-refs": "^3.0.15",
    "knex": "^0.95.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "mysql": "^2.18.1",
    "pino": "^6.11.2",
    "swagger-ui-express": "^4.1.4",
    "tslib": "~2.1.0",
    "yamljs": "^0.3.0"
  },
  "volta": {
    "node": "14.7.0"
  }
}
